{
  "name": "tab-journey-visualizer",
  "version": "1.0.0",
  "description": "Browser extension to visualize tab relationships",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!create-icons.js",
      "!background.js",
      "!node_modules/**",
      "!tests/**"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  }
}
